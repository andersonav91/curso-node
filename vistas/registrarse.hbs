<html>
<head>
    <title>Curso Node</title>
    {{> css_javascript}}
</head>
<body>
<div class="container">
    <h2>Registrarse</h2>
    <hr/>

    {{#if msg}}
        <div class="alert alert-success" role="alert">
            Se registro el usuario sin problema.
        </div>
    {{/if}}

    {{#if error}}
        <div class="alert alert-danger" role="alert">
            Error al guardar el usuario, este ya existe.
        </div>
    {{/if}}

    <div class="jumbotron"  style="padding:40px; margin-top:50px;">
        <form class="form" role="form" autocomplete="off" id="form-login" action="registrarse" method="POST">
            <div class="form-group">
                <label for="uname1">Correo </label>
                <input type="text" class="form-control form-control-lg rounded-0" name="correo" id="correo" required="true">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control form-control-lg rounded-0" name="password" id="password" required="true">
            </div>
            <div class="form-group">
                <label>Número Documento</label>
                <input type="text" class="form-control form-control-lg rounded-0" name="documento" id="documento" required="true">
            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="form-control form-control-lg rounded-0" name="nombre" id="nombre" required="true">
            </div>
            <div class="form-group">
                <label>Teléfono</label>
                <input type="text" class="form-control form-control-lg rounded-0" name="telefono" id="telefono" required="true">
            </div>
            <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Registrase</button>
        </form>
    </div>
</div>
</body>
</html>
