<html>
<head>
    <title>Curso Node</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container">
    {{> menu}}
    <h2>Eliminar inscritos cursos</h2>
    <hr/>

    {{#if cerrado}}
        <div class="alert alert-success" role="alert">
            El curso se cerró correctamente.
        </div>
    {{/if}}

    <div class="row">
        <div class="col-md-12 mx-auto">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Id Curso</th>
                    <th scope="col">Nombre Curso</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Inscritos</th>
                </tr>
                </thead>
                <tbody>
                {{#each cursos}}
                    <tr>
                        <th scope="row"><a href="/ver-curso/{{idCurso}}">{{idCurso}}</a></th>
                        <td><a href="/ver-curso/{{idCurso}}">{{nombre}}</a></td>
                        <td>{{descripcion}}</td>
                        <td>
                            {{{obtenerListaInscritosAEliminar idCurso}}}
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>
